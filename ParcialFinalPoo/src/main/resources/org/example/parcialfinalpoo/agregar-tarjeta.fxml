<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="854.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.parcialfinalpoo.controllers.AgregarTarjetaController">
   <children>
      <BorderPane prefHeight="480.0" prefWidth="854.0">
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Agregar Tarjeta">
                     <font>
                        <Font size="24.0" />
                     </font></Label>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Label text="Numero de la tarjeta: " />
                        <TextField fx:id="txtFieldNumeroTarjeta1" prefHeight="26.0" prefWidth="294.0" />
                     </children>
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="55.0">
                     <children>
                        <Label text="Fecha de expiracion: " />
                        <TextField fx:id="txtFieldExpiracionTarjeta" prefHeight="26.0" prefWidth="297.0" promptText="AA-MM-DD || AAMMDD || MM-DD-AA || DD-MM-AA" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="87.0">
                     <children>
                        <Label text="Tipo de tarjeta: " />
                        <TextField fx:id="txtFieldTipoTarjeta" prefHeight="26.0" prefWidth="303.0" />
                     </children>
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="117.0">
                     <children>
                        <Label text="Facilitador:" />
                        <TextField fx:id="txtFacilitador" prefHeight="26.0" prefWidth="306.0" />
                     </children>
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="311.0" prefHeight="100.0" prefWidth="200.0" spacing="117.0">
                     <children>
                        <Label text="Cliente-ID:" />
                        <TextField fx:id="txtClienteID" prefHeight="26.0" prefWidth="309.0" />
                     </children>
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="94.0" prefWidth="854.0" spacing="117.0">
                     <children>
                        <Button fx:id="btnAgregar2" mnemonicParsing="false" onAction="#agregarTarjeta" text="Agregar">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnSalir10" mnemonicParsing="false" onAction="#btnSalir10OnAction" prefHeight="40.0" prefWidth="74.0" text="Salir">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Button>
                     </children>
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" top="20.0" />
               </padding>
            </VBox>
         </center></BorderPane>
   </children>
</AnchorPane>
